<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple model" />

    <Button
        android:id="@+id/btnCallBackModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call back model" />

    <Button
        android:id="@+id/btnCustomModel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="custom model 1" />


    <Button
        android:id="@+id/btnCustomModel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="custom model 2" />


    <Button
        android:id="@+id/btnCustomModel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="custom model 3" />

    <Button
        android:id="@+id/btnCustomModel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="with custom font" />


    <Button
        android:id="@+id/btnCustomModel5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gravity top" />


</LinearLayout>